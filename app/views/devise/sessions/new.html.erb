<div class="container">
  <div class="row justify-content-center align-items-center" style="height: 90vh;">
    <div class="col-lg-3">
    </div>

    <div class="col-lg-6 rounded" style="border-style: solid; border-color: orange; padding: 2%;">
      <h2 style="text-align: center; margin-top: 15px;">Sign in</h2> <br>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="mb-3">
          <%= label_tag :email, "Email", class: "form-label" %>
          <%= f.email_field :email, class: "form-control", placeholder: "name@example.com", autofocus: true, autocomplete: "email" %>
        </div>

        <div class="mb-3">
          <%= label_tag :password, "Password", class: "form-label" %>
          <div class="input-group">
            <%= f.password_field :password, class: "form-control password-toggle", placeholder: "Enter your password", autocomplete: "current-password" %>
            <span class="input-group-text password-toggle-icon">
              <i class="fas fa-eye"></i>
            </span>
          </div>
        </div>
      
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="row">
          <div class="col text-end">
            <%= render "devise/shared/links" %>
          </div>
        </div>        

        <div class="d-grid gap-2 mt-4 mb-3">
          <%= f.submit "Sign in", class: "btn btn-outline-success fw-bold" %>
        </div>
      <% end %>
    </div>

    <div class="col-lg-3">
    </div>
  </div>
</div>
