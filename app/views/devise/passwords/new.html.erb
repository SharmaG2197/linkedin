<div class="container">
  <div class="row justify-content-center align-items-center" style="height: 90vh;">
    <div class="col-lg-3">
    </div>

    <div class="col-lg-6 rounded" style="border-style: solid; border-color: orange; padding: 2%;">
      <h2 style="text-align: center; margin-top: 15px;">Forgot your password</h2> <br>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="mb-3">
          <%= label_tag :email, "Email", class: "form-label" %>
          <%= f.email_field :email, class: "form-control", placeholder: "name@example.com", autofocus: true, autocomplete: "email" %>
        </div>

        <div class="row">
          <div class="col text-end">
            <%= render "devise/shared/links" %>
          </div>
        </div>

        <div class="d-grid gap-2 mt-4 mb-4">
          <%= f.submit "Reset Password", class: "btn btn-outline-success fw-bold" %>
        </div>
      <% end %>
    </div>

    <div class="col-lg-3">
    </div>
  </div>
</div>
