<div style="padding:80px">
    <h2>Connecting To :- <%=@receiver.email%></h2>
    <div id="messages">
        <% @messages.each do |message| %>
            <p style="margin-left:100px"> 
                <b> <%= message.sender.email %> </b> :- 
                <%= message.text %> 
            </p>
        <% end %>
    </div>
    
    <%= form_tag messages_path  do %>
        <div>
            <%= text_field_tag :message, nil, placeholder: 'Type here...',class: 'form-control' %>
            <%= hidden_field_tag "receiver_id", @receiver.id %>
            <%= hidden_field_tag "sender_id", @sender.id %>
            <%= hidden_field_tag "chat_id", @chat_id %>
            <%= submit_tag "Send", data: { disable_with: false } %>
        </div>
    <% end %>
    <%= link_to "Back To Page", messages_path %>
</div>