<div style="padding:70px">
    <h1> Message Box </h1> <b>Current User Email :- <%= current_user.email %> </b>

    <div>
        <%= form_for :users, :url => "/messages/show", :html => { :method => 'GET' } do |f| %>
            <%#= f.collection_select :ids, current_user, :id, :email %> <br>
            <%= f.label "Who do you want to chat with ?" %> <br> <br>
        
            <% @users.each do |user| %>
                <%= radio_button_tag(:receiver_id, user.id) %>
                <%= label_tag(:email, user.email) %> <br>
            <% end %>
            <br>
            <%= f.submit "Chat"%>
        <% end %>
    </div>
