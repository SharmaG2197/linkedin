<%= form_with model: @post do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %> <br> <br>
    <% @post.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :description %>
    <%= form.text_field :description %> <br> <br>
    <% @post.errors.full_messages_for(:description).each do |message| %>
      <div><%= message %></div>
  </div>

  <div>
    <%= form.hidden_field :user_id %> <br> <br>
  </div>

  <div>
    <%= form.submit %>
  </div>

<% end %>