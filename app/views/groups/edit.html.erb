<div style="padding:70px" >
    <h1>Enter Group Name </h1>
    <%= form_with model: @group do |form| %>
        <div>
            <%= form.label :group_name %>
            <%= form.text_field :group_name %> <br> <br>
            <% @group.errors.full_messages_for(:group_name).each do |message| %>
                <div><%= message %></div>
            <% end %>
        </div>
    
        <div>
            <%= form.hidden_field :user_id %> <br> <br>
        </div>
    
        <div>
            <%= form.submit %>
        </div>
    
    <% end %>
</div>